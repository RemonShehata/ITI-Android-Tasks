<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    tools:context=".TextFragment">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@android:dimen/notification_large_icon_width"
        android:layout_marginTop="@android:dimen/notification_large_icon_width"
        android:layout_marginEnd="@android:dimen/notification_large_icon_width"
        android:layout_marginBottom="@android:dimen/notification_large_icon_width"
        android:text="@string/count" />

    <TextView
        android:id="@+id/counterView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@android:dimen/notification_large_icon_width"
        android:layout_marginBottom="@android:dimen/notification_large_icon_width"
        android:layout_weight="1"
        android:text="0"
        tools:text="5" />

</LinearLayout>